{
  "name": "trusty-notes-web",
  "private": true,
  "version": "0.8.2",
  "type": "module",
  "description": "TrustyNotes is a simple, secure, and reliable note-taking app",
  "author": "Toolworks.dev",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:electron": "cross-env ELECTRON=true tsc && vite build && node desktop/build.js",
    "start:electron": "cd desktop && electron .",
    "dev:electron": "concurrently \"vite\" \"cd desktop && cross-env NODE_ENV=development electron .\"",
    "build:chrome": "bun browser-extension/build.js chrome",
    "build:firefox": "bun browser-extension/build.js firefox",
    "dist:linux": "bun run build:electron && cd desktop && bun run build:linux",
    "dist:windows": "bun run build:electron && cd desktop && bun run build:windows",
    "dist:all": "bun run build:electron && cd desktop && bun run build:all",
    "generate-android-icons": "bun scripts/generate-android-icons.js",
    "android": "bun run build && bunx cap sync && bunx cap open android",
    "build:android": "bun run build && bunx cap sync && cd android && ./gradlew assembleRelease",
    "add:android": "bunx cap add android",
    "ios": "bun run build && bunx cap sync && bunx cap open ios",
    "build:ios": "bun run build && bunx cap sync ios"
  },
  "dependencies": {
    "@capacitor/android": "^7.3.0",
    "@capacitor/app": "^7.0.1",
    "@capacitor/cli": "^7.3.0",
    "@capacitor/core": "^7.3.0",
    "@capacitor/dialog": "^7.0.1",
    "@capacitor/ios": "^7.3.0",
    "@capacitor/keyboard": "^7.0.1",
    "@capacitor/preferences": "^7.0.1",
    "@capacitor/splash-screen": "^7.0.1",
    "@capacitor/status-bar": "^7.0.1",
    "@emotion/react": "^11.14.0",
    "@mantine/core": "^8.1.0",
    "@mantine/hooks": "^8.1.0",
    "@mantine/notifications": "^8.1.0",
    "@noble/curves": "^1.9.2",
    "@noble/ed25519": "^2.3.0",
    "@noble/hashes": "^1.8.0",
    "@noble/post-quantum": "^0.4.1",
    "@tabler/icons-react": "^3.34.0",
    "@tiptap/extension-code-block": "^2.14.0",
    "@tiptap/extension-highlight": "^2.14.0",
    "@tiptap/extension-image": "^2.14.0",
    "@tiptap/extension-link": "^2.14.0",
    "@tiptap/extension-table": "^2.14.0",
    "@tiptap/extension-table-cell": "^2.14.0",
    "@tiptap/extension-table-header": "^2.14.0",
    "@tiptap/extension-table-row": "^2.14.0",
    "@tiptap/extension-text-align": "^2.14.0",
    "@tiptap/pm": "^2.14.0",
    "@tiptap/react": "^2.14.0",
    "@tiptap/starter-kit": "^2.14.0",
    "@types/highlight.js": "^10.1.0",
    "bip39": "^3.1.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "date-fns": "^4.1.0",
    "highlight.js": "^11.11.1",
    "process": "^0.11.10",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "sharp": "^0.34.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  }
}
